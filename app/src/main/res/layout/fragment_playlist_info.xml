<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yp_light_gray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/playlist_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginBottom="200dp"
        android:background="@color/yp_light_gray">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/playlist_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/playlist_title_tv"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/placeholder"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/placeholder" />
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/back_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/back_icon"
            android:scaleType="center"
            android:background="@null"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/playlist_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintVertical_chainStyle="packed"
            android:fontFamily="@font/ys_display_bold"
            android:lineHeight="28sp"
            android:textColor="@color/yp_black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playlist_iv"
            app:layout_constraintBottom_toTopOf="@id/playlist_description_tv"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Best songs 2021" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/playlist_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/ys_display_regular"
            android:lineHeight="21sp"
            android:textColor="@color/yp_black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/playlist_title_tv"
            app:layout_constraintTop_toBottomOf="@id/playlist_title_tv"
            app:layout_constraintBottom_toTopOf="@id/playlist_length_tv"
            app:layout_constraintVertical_bias="0.0"
            tools:text="2022" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/playlist_length_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_weight="1"
            android:ellipsize="end"
            app:layout_constraintHorizontal_bias="0.0"
            android:fontFamily="@font/ys_display_regular"
            android:lineHeight="21sp"
            android:maxLines="1"
            app:layout_goneMarginTop="8dp"
            android:textColor="@color/yp_black"
            android:textSize="18sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@id/dot"
            app:layout_constraintTop_toBottomOf="@id/playlist_description_tv"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@id/playlist_description_tv"
            app:layout_constraintBottom_toTopOf="@id/share_button"
            tools:text="300 минут" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/dot"
            android:layout_width="13dp"
            android:layout_height="13dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@drawable/playlist_dot"
            app:layout_constraintBottom_toBottomOf="@id/playlist_length_tv"
            app:layout_constraintStart_toEndOf="@id/playlist_length_tv"
            app:layout_constraintEnd_toStartOf="@id/playlist_track_count_tv"
            app:layout_constraintTop_toTopOf="@id/playlist_length_tv" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/playlist_track_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_weight="1"
            android:fontFamily="@font/ys_display_regular"
            android:lineHeight="21sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/yp_black"
            android:textSize="18sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@id/playlist_length_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/dot"
            tools:text="98 треков" />


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/share_button"
            app:layout_constraintTop_toBottomOf="@id/playlist_length_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/share_dark"
            app:layout_constraintStart_toStartOf="@id/playlist_length_tv"
            app:layout_constraintTag="share"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/more_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/three_dots"
            app:layout_constraintStart_toEndOf="@id/share_button"
            app:layout_constraintTop_toBottomOf="@id/playlist_length_tv"
            app:layout_constraintTag="more"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/playlists_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_bg"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:behavior_peekHeight="266dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/bottom_sheet_handle" />
        <TextView
            android:visibility="gone"
            tools:visibility="visible"
            android:id="@+id/error_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:lineHeight="22sp"
            android:textAppearance="@style/medium_onprimary_19"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginTop="@dimen/extra_large_margin"
            android:text="@string/no_tracks_in_playlist"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playlist_tracks_rv"
            tools:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/track_item_view" />
    </LinearLayout>
    <View android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone"
        tools:visibility="visible"/>
    <LinearLayout
        android:id="@+id/bottom_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_bg"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="380dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
        <View
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottom_sheet_handle"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:background="?attr/colorPrimary">
            <androidx.cardview.widget.CardView
                android:id="@+id/playlist_cv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="13dp"
                android:elevation="0dp"
                android:outlineProvider="none"
                android:background="?attr/colorPrimary"
                app:cardCornerRadius="2dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/bottom_playlist_iv"
                    android:layout_width="match_parent"
                    android:background="?attr/colorPrimary"
                    android:layout_height="match_parent"
                    tools:src="@drawable/placeholder"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/bottom_playlist_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/playlist_cv"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="14dp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="16sp"
                android:lineHeight="18sp"
                android:textColor="?attr/colorOnPrimary"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Best songs 2021"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/bottom_playlist_track_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:layout_constraintStart_toStartOf="@id/bottom_playlist_title_tv"
                app:layout_constraintTop_toBottomOf="@id/bottom_playlist_title_tv"
                tools:text="98 треков"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="11sp"
                android:textColor="?attr/colorTertiary"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/share_tv"
            android:text="@string/share"
            style="@style/more_menu_element"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/edit_tv"
            android:text="@string/edit_playlist"
            style="@style/more_menu_element"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/delete_tv"
            android:text="@string/delete_playlist"
            style="@style/more_menu_element"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>