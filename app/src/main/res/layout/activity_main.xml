<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/panel_header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginEnd="52dp"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_marginStart="@dimen/small_margin">

        <TextView
            android:id="@+id/title"
            android:layout_marginStart="@dimen/extra_large_margin"
            android:text="@string/main_screen_title"
            style="@style/title"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/extra_large_margin"
        android:paddingTop="@dimen/extra_large_margin"
        android:paddingBottom="20dp">

        <Button
            app:icon = "@drawable/search_icon"
            android:id="@+id/search_button_layout"
            style="@style/main_screen_buttons"
            android:text="@string/search" />
        <Button
            app:icon = "@drawable/playlist_icon"
            android:id="@+id/playlist_button_layout"
            style="@style/main_screen_buttons"
            android:text="@string/media" />
        <Button
            app:icon = "@drawable/settings_icon"
            android:id="@+id/settings_button_layout"
            style="@style/main_screen_buttons"
            android:text="@string/settings"
            />


    </LinearLayout>

</LinearLayout>