<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title" parent="title_basic">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="body">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="title_basic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_marginTop">@dimen/large_margin</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin</item>\
        <item name="android:gravity">top</item>
        <item name="lineHeight">26dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="title_black" parent="title_basic">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="settings_body">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_marginTop">@dimen/settings_vertical_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/settings_vertical_margin_bottom</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/extra_large_margin</item>
    </style>
    <style name="settings_icons">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/settings_vertical_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/settings_vertical_margin_bottom</item>
        <item name="android:layout_marginEnd">@dimen/medium_margin</item>
        <item name="android:layout_marginLeft">@dimen/settings_start_margin</item>
        <item name="tint">@color/icons_tint_color</item>
    </style>
    <style name="main_screen_buttons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginVertical">@dimen/main_activity_buttons_margin</item>
        <item name="android:textAppearance">@style/body</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="iconTintMode">src_atop</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="switch_style_settings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:layout_marginBottom">11dp</item>
        <item name="thumbTint">@color/yp_text_gray</item>
        <item name="trackTint">@color/yp_light_gray</item>
    </style>
    <style name="search_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/clear_button_color</item>
        <item name="drawableTint">@color/clear_button_color</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="tint">@color/clear_button_color</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:background">@drawable/search_field_background</item>
        <item name="android:drawableStart">@drawable/search_icon</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">50</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingHorizontal">@dimen/medium_margin</item>
    </style>
    <style name="track_title_style">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="track_subtext">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/icons_tint_color</item>
    </style>
    <style name="track_dot">
        <item name="android:layout_width">13dp</item>
        <item name="android:layout_height">13dp</item>
        <item name="android:src">@drawable/dot</item>
        <item name="tint">@color/icons_tint_color</item>
    </style>
    <style name="track_arrow">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:src">@drawable/tos_button</item>
        <item name="tint">@color/icons_tint_color</item>
    </style>
</resources>