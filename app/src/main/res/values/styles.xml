<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title" parent="title_basic">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="body">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="title_basic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_marginTop">@dimen/large_margin</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin</item>\
        <item name="android:gravity">top</item>
        <item name="lineHeight">26dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="title_black" parent="title_basic">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="track_title" parent="title_black">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="player_small_text" parent="track_title">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="track_details_text" parent="player_small_text">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/yp_text_gray</item>
    </style>
    <style name="track_info_text" parent="track_details_text">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="medium_onprimary_19">
        <item name="android:textSize">19sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="search_history_text">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="rounded_button_text">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="player_track_header_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAppearance">@style/track_details_text</item>
        <item name="lineHeight">15sp</item>
    </style>
    <style name="player_track_info_tv" parent="player_track_header_tv">
        <item name="android:layout_width">0dp</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="android:textAppearance">@style/track_info_text</item>
        <item name="android:gravity">end</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>
    <style name="rounded_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">@style/rounded_button_text</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="cornerRadius">54dp</item>
    </style>
    <style name="settings_body">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:lineHeight">19sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">@dimen/medium_margin</item>
    </style>
    <style name="settings_icons">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/settings_vertical_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/settings_vertical_margin_bottom</item>
        <item name="android:layout_marginEnd">@dimen/medium_margin</item>
        <item name="android:layout_marginLeft">@dimen/settings_start_margin</item>
        <item name="tint">@color/icons_tint_color</item>
    </style>
    <style name="main_screen_buttons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginVertical">@dimen/main_activity_buttons_margin</item>
        <item name="android:textAppearance">@style/body</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="iconTintMode">src_atop</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="search_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/clear_button_color</item>
        <item name="drawableTint">@color/clear_button_color</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="tint">@color/clear_button_color</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:background">@drawable/search_field_background</item>
        <item name="android:drawableStart">@drawable/search_icon_small</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">50</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingHorizontal">@dimen/medium_margin</item>
         <item name="android:singleLine">true</item>
    </style>
    <style name="track_title_style">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="track_subtext">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/icons_tint_color</item>
    </style>
    <style name="track_dot">
        <item name="android:layout_width">13dp</item>
        <item name="android:layout_height">13dp</item>
        <item name="android:src">@drawable/dot</item>
        <item name="tint">@color/icons_tint_color</item>
    </style>
    <style name="track_arrow">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:src">@drawable/tos_button</item>
        <item name="tint">@color/icons_tint_color</item>
    </style>
    <style name="back_button" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:src">@drawable/back_icon</item>
        <item name="tint">?attr/colorOnPrimary</item>
    </style>
    <style name="tab_bar_text_style">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="bottom_navigation_view_unactive_text_style">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">16sp</item>
    </style>
    <style name="bottom_navigation_view_active_text_style" parent="bottom_navigation_view_unactive_text_style">
        <item name="android:textColor">@color/main_blue</item>
    </style>
    <style name="CustomOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="hintTextColor">@color/main_blue</item>
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textColorPrimary">@color/yp_black</item>
        <item name="android:colorAccent">@color/yp_black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="more_menu_element">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>


</resources>